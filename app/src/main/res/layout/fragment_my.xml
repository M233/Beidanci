<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" 
        android:background="@android:color/white"
        >
        <!-- 登录 -->
        <LinearLayout 
            android:id="@+id/fragment_my_login"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <!-- 图标 -->
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_my_login_icon"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" 
                    >
                    <TextView 
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="登录/注册"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 消息-->
        <LinearLayout 
            android:id="@+id/fragment_my_message"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <!-- 图标 -->
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_my_message_icon"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" 
                    >
                    <TextView 
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="消息中心"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 设置 -->
        <LinearLayout 
            android:id="@+id/fragment_my_set"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            >
            <!-- 图标 -->
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/fragment_my_set_icon"
                />
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical" 
                    >
                    <TextView 
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        style="@style/fragment_my_bootom_nav_text"
                        />
                </LinearLayout>
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#666"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 用户头像 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:background="#f5f5f5"
        >
        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/fragment_my_user_img"
            />
    </LinearLayout>
</LinearLayout>
