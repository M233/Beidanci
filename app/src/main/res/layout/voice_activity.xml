<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
	<ListView 
	    android:id="@+id/search_record"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="3"
	    android:layout_margin="5dp"
	    android:orientation="vertical"
	></ListView>
	<TextView 
	    android:id="@+id/search_status"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="2"
	    android:layout_margin="5dp"
	    />
	<LinearLayout 
	    android:id="@+id/search_menu"
	    android:layout_width="match_parent"
	    android:layout_height="60dp"
	    android:orientation="horizontal"
	    android:padding="10dp"
	    >
	    <ImageView
	        android:id="@+id/search_method_icon"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/search_method_write_icon"
	        android:clickable="true"
	        />
	    <Button
	        android:id="@+id/search_voice"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:text="按住 说话"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:gravity="center"
	        android:background="#0f0"
	        android:textSize="16sp"
	        />
	    <EditText 
	        android:id="@+id/search_write"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:hint="在这里输入要翻译的文字"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:visibility="gone"
	        android:singleLine="true"
	        />
	    <ImageView
	        android:id="@+id/search_menu_more_icon"
	        android:layout_width="40dp"
	        android:layout_height="match_parent"
	        android:src="@drawable/search_menu_more_icon"
	        />
	</LinearLayout>	
</LinearLayout>
